{
	"env": {
		"browser": true,
		"es6": true,
		"node": false
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": 2018
	},
	"globals": {
		"window": true
	},
	"rules": {
		"no-restricted-globals": [
			"error",
			{ "name": "console"         },
			{ "name": "location"        },
			{ "name": "URL"             },
			{ "name": "URLSearchParams" }
		],
		"arrow-parens": [
			"error",
			"always"
		],
		"indent": [
			"error",
			"tab"
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"no-unused-vars": [
			"error"
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"always"
		]
	}
}
